@model List<Out_of_Office.Application.Employee.EmployeeDto>

<h2>Employees</h2>

<p>
    @using (Html.BeginForm("Index", "Employee", FormMethod.Get))
    {
    <p>
        Find by name: @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
    }
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("ID", "Index", new { sortOrder = ViewBag.IdSortParm, searchString = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Full Name", "Index", new { sortOrder = ViewBag.NameSortParm, searchString = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Subdivision", "Index", new { sortOrder = ViewBag.SubdivisionSortParm, searchString = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Position", "Index", new { sortOrder = ViewBag.PositionSortParm, searchString = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Status", "Index", new { sortOrder = ViewBag.StatusSortParm, searchString = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Out of Office Balance", "Index", new { sortOrder = ViewBag.OutOfOfficeBalanceSortParm, searchString = ViewBag.CurrentFilter })
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.FullName</td>
                <td>@employee.Subdivision</td>
                <td>@employee.Position</td>
                <td>@employee.Status</td>
                <td>@employee.OutOfOfficeBalance</td>
            </tr>
        }
    </tbody>
</table>