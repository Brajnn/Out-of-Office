@model Out_of_Office.Application.Models.AssignProjectViewModel.AssignProjectViewModel

@{
    ViewData["Title"] = "Assign Employee to Project";
}

<h2>Assign Employee to Project</h2>

<h4>Project: @Model.Project.ProjectType</h4>
<h4>Project ID: @Model.ProjectId</h4>

<form asp-action="AssignEmployee" method="post">
    <input type="hidden" asp-for="ProjectId" />
    <div class="form-group">
        <label for="SelectedEmployeeId">Select Employee</label>
        <select asp-for="SelectedEmployeeId" class="form-control" asp-items="@(new SelectList(Model.Employees, "Id", "FullName"))"></select>
    </div>
    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary">Assign</button>
    </div>
</form>

<div>
    <a asp-action="Details" asp-route-id="@Model.ProjectId" class="btn btn-primary">Back to Project Details</a>
</div>

