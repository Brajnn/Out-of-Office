@model Out_of_Office.Application.Leave_Request.LeaveRequestDto

@{
    ViewData["Title"] = "Leave Request Details";
}

<h2>Leave Request Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.ID</dd>
        <dt class="col-sm-2">Employee</dt>
        <dd class="col-sm-10">@Model.EmployeeFullName</dd>
        <dt class="col-sm-2">Absence Reason</dt>
        <dd class="col-sm-10">@Model.AbsenceReason</dd>
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Comment</dt>
        <dd class="col-sm-10">@Model.Comment</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
